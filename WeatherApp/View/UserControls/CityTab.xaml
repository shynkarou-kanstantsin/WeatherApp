<UserControl x:Class="WeatherApp.View.UserControls.CityTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeatherApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="110" d:DesignWidth="110">
    <Border BorderBrush="#130b61" BorderThickness="1" CornerRadius="5">
        <Grid>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding CityName}" FontSize="20" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Temperature}" FontSize="20" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Condition}" FontSize="20" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <Button Command="{Binding DataContext.DeleteCityTabCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" 
                        Background="Transparent" BorderBrush="Transparent" ToolTip="Delete from pinned" Width="20" Height="20" HorizontalAlignment="Right" Margin="5,5,5,5">
                    <Button.Content>
                        <TextBlock Text="-" FontSize="25" Foreground="Black" VerticalAlignment="Center"/>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
